        app:layout_constraintStart_toStartOf="@id/gl_v_25"
        app:layout_constraintEnd_toStartOf="@id/gl_v_50"
        app:layout_constraintBottom_toTopOf="@id/gl_h_40"
        android:text="@string/pi"
        android:textSize="40sp"
        android:backgroundTint="@color/teal_700"/>

    <Button
        android:id="@+id/b_03"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/gl_25Top"
        app:layout_constraintStart_toStartOf="@id/gl_v_50"
        app:layout_constraintEnd_toStartOf="@id/gl_v_75"
        app:layout_constraintBottom_toTopOf="@id/gl_h_40"
        android:text="%"
        android:textSize="40sp"
        android:backgroundTint="@color/teal_700"/>


    <Button
        android:id="@+id/b_04"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/gl_25Top"
        app:layout_constraintStart_toStartOf="@id/gl_v_75"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/gl_h_40"
        android:text="/"
        android:textSize="40sp"
        android:backgroundTint="@color/teal_700"/>

    <!-- Third row buttons -->
    <Button
        android:id="@+id/b_05"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:text="7"
        android:textSize="40sp"
        android:textColor="@color/black"
