        app:layout_constraintBottom_toTopOf="@id/gl_25Top"
        app:layout_constraintStart_toStartOf="@id/gl_v_50"
        app:layout_constraintEnd_toStartOf="@id/gl_v_75"
        android:text="MR"
        android:textSize="38sp"
        android:backgroundTint="@color/teal_700"/>


    <Button
        android:id="@+id/b_M4"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/gl_h_10"
        app:layout_constraintBottom_toTopOf="@id/gl_25Top"
        app:layout_constraintStart_toStartOf="@id/gl_v_75"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="MC"
        android:textSize="38sp"
        android:backgroundTint="@color/teal_700"/>

    <!-- Second row buttons -->
