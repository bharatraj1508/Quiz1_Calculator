<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Text view for displaying the result on the text field-->
    <TextView
        android:id="@+id/et_top"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/gl_h_10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="50sp"
        android:text="0.00"
        android:gravity="right"
        android:textColor="@color/black"/>

    <!-- Vertical Guidelines which divide the screen to 4 equal parts -->
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_v_25"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_v_50"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.50"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_v_75"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75"/>

    <!-- Horizontal guidelines divides the screen to 6 equal parts-->
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_h_10"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.10"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_25Top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_h_40"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.40"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_h_55"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_h_70"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gl_h_85"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85"/>


    <!-- First row buttons -->
    <Button
        android:id="@+id/b_M1"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:text="M+"
        android:textSize="38sp"
        android:backgroundTint="@color/teal_700"
        app:layout_constraintTop_toTopOf="@id/gl_h_10"
        app:layout_constraintBottom_toTopOf="@id/gl_25Top"
        app:layout_constraintEnd_toStartOf="@id/gl_v_25"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/b_M2"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="@id/gl_h_10"
        app:layout_constraintBottom_toTopOf="@id/gl_25Top"
        app:layout_constraintStart_toStartOf="@id/gl_v_25"
        app:layout_constraintEnd_toStartOf="@id/gl_v_50"
