        app:layout_constraintBottom_toTopOf="@id/gl_h_70"
        app:layout_constraintStart_toStartOf="@id/gl_v_25"
        app:layout_constraintEnd_toStartOf="@id/gl_v_50"
        android:text="5"
        android:textSize="40sp"
        android:textColor="@color/black"
