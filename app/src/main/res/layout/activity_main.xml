        app:layout_constraintTop_toTopOf="@id/gl_h_70"
        app:layout_constraintBottom_toTopOf="@id/gl_h_85"
        app:layout_constraintStart_toStartOf="@id/gl_v_75"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+"
        android:textSize="40sp"
        android:backgroundTint="@color/teal_700"/>

